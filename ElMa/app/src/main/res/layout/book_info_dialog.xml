<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/favoritesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="30px"
            android:src="@drawable/iconheart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/darker_gray" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_book"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_margin="20dp"
            android:scaleType="centerCrop" />

    </LinearLayout>

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/sfnsdisplaythin"
        android:singleLine="false"
        android:textColor="@color/Blue_screen_of_death"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/seriesTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/sfnsdisplaythin"
        android:singleLine="false"
        android:textColor="@color/Blue_screen_of_death"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/bookPublisher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/sfnsdisplaythin"
        android:textColor="@color/Blue_screen_of_death"
        android:singleLine="false"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/bookAuthors"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/sfnsdisplaythin"
        android:textColor="@color/Blue_screen_of_death"
        android:singleLine="false"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/bookEditors"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/sfnsdisplaythin"
        android:textColor="@color/Blue_screen_of_death"
        android:singleLine="false"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/place_publication"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/sfnsdisplaythin"
        android:textColor="@color/Blue_screen_of_death"
        android:singleLine="false"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/year_publication"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/sfnsdisplaythin"
        android:textColor="@color/Blue_screen_of_death"
        android:singleLine="false"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/themes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/sfnsdisplaythin"
        android:textColor="@color/Blue_screen_of_death"
        android:singleLine="false"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/annotation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/sfnsdisplaythin"
        android:textColor="@color/Blue_screen_of_death"
        android:singleLine="false"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/closeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Blue_screen_of_death"
        android:fontFamily="@font/sfnsdisplaythin"
        android:text="Закрыть"
        android:textAllCaps="false"
        android:textColor="@color/Blue_Alice"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="55dp" />

</LinearLayout>